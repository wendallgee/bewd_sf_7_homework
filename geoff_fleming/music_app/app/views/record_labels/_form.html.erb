<div class="col-md-6">

<div class="well">
<%= simple_form_for(@record_label, html: {:class => 'form-horizontal'} ) do |f| %> 

	<%= f.input :name, {:class => 'form-control', placeholder: 'Record Label Name'} %> 
	<br/> 

	<div style="text-align:center;">
		<%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-danger' %> 
	</div>
<%end %> 

</div>
</div>